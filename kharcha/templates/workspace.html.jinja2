{% extends Replace: "layout.html.jinja2" %}
{% block title %}{{ workspace.title }}{% endblock %}
{% block headline %}{% endblock %}
{% block content %}
  <div class="row section">
    <div class="span6 print-span8">
      <div class="page-header">
        <h1>
          {{ self.title() }}
        </h1>
      </div>
      <div class="expandable">
        {{ workspace.description|safe }}
      </div>
    </div>
    {% if 'admin' in g.permissions -%}
      <div class="span3 print-span4">
        <ul class="well nav nav-list">
          <li class="no-print"><a href="{{ url_for('workspace_edit', workspace=workspace.name) }}"><span class="icon-cogs">Settings</span></a></li>
          <li class="no-print"><a href="{{ url_for('workspace_delete', workspace=workspace.name) }}"><span class="icon-trash"> Delete...</span></a></li>
        </ul>
      </div>
    {% endif %}
  </div>
{% endblock %}

{% block footerscripts %}
  <script type="text/javascript">
    $(function() {
      $('div.expandable').expander();
    });
  </script>
{% endblock %}